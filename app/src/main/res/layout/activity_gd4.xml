<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".gd4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ NHÂN SỰ"
        android:textColor="#AEF65B"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPOLY SOFTWARE COMPANY"
        android:textColor="#F44538"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_marginRight="20dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/th6"
            android:backgroundTint="#FFFFFf"
            android:text="PHÒNG BAN"
            android:textColor="#FF0000"
            android:textSize="20dp"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/th7"
            android:backgroundTint="#FFFFFF"
            android:text="NHÂN VIÊN"
            android:textColor="#0040FF"

            android:textSize="20dp"/>
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFFFF"

        android:drawableTop="@drawable/t6"
        android:text="THOÁT"
        android:textColor="#FF0000"
        android:textSize="20dp" />
</LinearLayout>